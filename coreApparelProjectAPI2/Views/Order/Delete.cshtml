@model coreApparelProjectAPI2.Models.Order

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<h2>Delete Order</h2>

<h3>Are you sure you want to delete this?</h3>
<hr />
<div class="row">
    <div class="col-lg-4">
        &nbsp;
    </div>
    <div class="col-lg-4">
        <div class="form-group">
            <div class="form-group">


                <input type="hidden" class="form-control" asp-for="OrderId">
            </div>
            <div class="form-group">

                <label for="OrderDate">OrderDate</label>
                <input type="text" class="form-control" asp-for="OrderDate">
            </div>
            <div class="form-group">
                <label for="OrderAmount">OrderAmount</label>
                <input type="text" class="form-control" asp-for="OrderAmount">
            </div>         

            <form asp-action="Delete" asp-controller="Order">
                <button type="submit" class="btn btn-primary">Delete</button>

            </form>
            <a asp-controller="Order" asp-action="Index"><button type="submit" class="btn btn-primary">BackToList</button></a>
        </div>
        <div class="col-lg-4">
            &nbsp;
        </div>
    </div>
