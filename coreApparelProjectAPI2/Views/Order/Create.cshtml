@model coreApparelProjectAPI2.Models.Order

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<h2>Creating new order</h2>

<hr />
<div class="row">
    <div class="col-lg-4">
        &nbsp;
    </div>
    <div class="col-lg-4">
        <form asp-action="Create" asp-controller="Order">
            <div class="form-group">
                <input type="hidden" asp-for="OrderId" />
                <br />
                <label for="OrderDate">OrderDate</label>
                <input type="text" class="form-control" placeholder="Enter Product Name" asp-for="OrderDate">
            </div>
            <div class="form-group">
                <label for="OrderAmount">OrderAmount</label>
                <input type="text" class="form-control" placeholder="Price" asp-for="OrderAmount">
            </div>
            <div class="form-group">
                <label for="Units">Units</label>
                <input type="text" class="form-control" placeholder="Price" asp-for="Units">
            </div>

            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-controller="Order" asp-action="Index"><button type="submit" class="btn btn-primary">BackToList</button></a>
        </form>
    </div>
    <div class="col-lg-4">
        &nbsp;
    </div>
</div>

