@model coreApparelProjectAPI2.Models.Category

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<h2>Delete Category</h2>

<h3>Are you sure you want to delete this?</h3>
<hr />
<div class="row">
    <div class="col-lg-4">
        &nbsp;
    </div>
    <div class="col-lg-4">
        <div class="form-group">
            <div class="form-group">


                <input type="hidden" class="form-control" asp-for="CategoryId">
            </div>
            <div class="form-group">

                <label for="CategoryName">CategoryName</label>
                <input type="text" class="form-control" asp-for="CategoryName">
            </div>
            <div class="form-group">
                <label for="CategoryDescription">CategoryDescription</label>
                <input type="text" class="form-control" asp-for="CategoryDescription">
            </div>

            <form asp-action="Delete" asp-controller="Category">
                <button type="submit" class="btn btn-primary">Delete</button>
                <a asp-controller="Category" asp-action="Index"><button type="submit" class="btn btn-primary">BackToList</button></a>
            </form>
           
        </div>
        <div class="col-lg-4">
            &nbsp;
        </div>
    </div>
