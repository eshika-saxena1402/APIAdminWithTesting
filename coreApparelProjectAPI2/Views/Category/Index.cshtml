@model IEnumerable<coreApparelProjectAPI2.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-info">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryDescription)
            </td>
            <td>

                <a asp-controller="Category" asp-action="Details" asp-route-id="@item.CategoryId"><button type="button" class="btn btn-light">Details</button></a>||
                <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.CategoryId"><button type="button" class="btn btn-light">Edit</button></a>||

                <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.CategoryId"><button type="button" class="btn btn-light">Delete</button></a>
            </td>
        </tr>
}
    </tbody>
</table>
