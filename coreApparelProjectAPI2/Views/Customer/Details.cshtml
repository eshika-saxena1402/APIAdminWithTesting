@model coreApparelProjectAPI2.Models.Customer

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<h2>Details of the Customer</h2>
<hr />

<div class="row">
    <div class="col-lg-4">
        &nbsp;
    </div>
    <div class="col-lg-4">

        <div class="form-group">
            <label for="CustomerId">CustomerId</label>
            <div class="form-control">
                @Html.DisplayFor(m => m.CustomerId)
            </div>
          
            <br />
            <label for="CustomerFirstName">Customer First Name</label>
            <div class="form-control">
                @Html.DisplayFor(m => m.CustomerFirstName)
            </div>
      
        </div>
        <div class="form-group">
            <label for="Email">Email</label>
            <div class="form-control">
                @Html.DisplayFor(m => m.Email)
            </div>
           
        </div>
        <div class="form-group">
            <label for="Gender">Gender</label>
            <div class="form-control">
                @Html.DisplayFor(m => m.Gender)
            </div>
        
        </div>
        <div class="form-group">
            <label for="Password">Password</label>
            <div class="form-control">
                @Html.DisplayFor(m => m.Password)
            </div>
        
        </div>
        <div class="form-group">
            <label for="PhoneNumber">PhoneNumber</label>
            <div class="form-control">
                @Html.DisplayFor(m => m.PhoneNumber)
            </div>
         
        </div>
        <a asp-controller="Customer" asp-action="Index"><button type="submit" class="btn btn-primary"> BackToList</button></a>

    </div>
    <div class="col-lg-4">
        &nbsp;
    </div>
</div>