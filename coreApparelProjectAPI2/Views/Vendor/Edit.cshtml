@model coreApparelProjectAPI2.Models.Vendor

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<h2>Edit Vendor</h2>

<div class="row">
    <div class="col-lg-4">
        &nbsp;
    </div>
    <div class="col-lg-4">
        <form asp-action="Edit" asp-controller="Vendor">
            <div class="form-group">
                <label for="VendorId">VendorId</label>
                <input type="text" class="form-control" asp-for="VendorId" />
                <br />
                <label for="VendorName">VendorName</label>
                <input type="text" class="form-control" asp-for="VendorName" />
                <br />
                <label for="VendorEmail">VendorEmail</label>
                <input type="text" class="form-control" asp-for="VendorEmail">
            </div>
            <div class="form-group">
                <label for="VendorPhoneNo">VendorPhoneNo</label>
                <input type="text" class="form-control" asp-for="VendorPhoneNo">
            </div>
            <button type="submit" class="btn btn-primary">Edit</button>
            <a asp-controller="Vendor" asp-action="Index"><button type="submit" class="btn btn-primary">BackToList</button></a>
        </form>
    </div>
    <div class="col-lg-4">
        &nbsp;
    </div>
</div>
