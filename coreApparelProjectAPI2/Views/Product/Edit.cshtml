@model coreApparelProjectAPI2.Models.Product

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<h2>Edit Product</h2>
<hr/>

<div class="row">
    <div class="col-lg-4">
        &nbsp;
    </div>
    <div class="col-lg-4">
        <form asp-action="Edit" asp-controller="Product">
            <div class="form-group">
                <label for="ProductId">ProductId</label>
                <input type="text" class="form-control" asp-for="ProductId" />
                <br />
                <label for="ProductName">ProductName</label>
                <input type="text" class="form-control" asp-for="ProductName">
            </div>
            <div class="form-group">
                <label for="ProductPrice">ProductPrice</label>
                <input type="text" class="form-control" asp-for="ProductPrice">
            </div>
            <div class="form-group">
                <label for="ProductQuantity">ProductQuantity</label>
                <input type="text" class="form-control" asp-for="ProductQuantity">
            </div>
            <div class="form-group">
                <label for="ProductSize">ProductSize</label>
                <input type="text" class="form-control" asp-for="ProductSize">
            </div>
            <div class="form-group">
                <label for="ProductImage">ProductImage</label>
                <input type="text" class="form-control" asp-for="ProductImage">
            </div>
            <div class="form-group">
                <label for="ProductDescription">ProductDescription</label>
                <input type="text" class="form-control" asp-for="ProductDescription">
            </div>
            @*<div class="form-group">
                <label for="CategoryId">CategoryId</label>
                <input type="text" class="form-control" asp-for="CategoryId">
            </div>
            <div class="form-group">
                <label for="VendorId">VendorId</label>
                <input type="text" class="form-control" asp-for="VendorId">
            </div>
            <div class="form-group">
                <label for="BrandId">BrandId</label>
                <input type="text" class="form-control" asp-for="BrandId">
            </div>*@
            <button type="submit" class="btn btn-primary">Edit</button>
            <a asp-controller="Product" asp-action="Index"><button type="submit" class="btn btn-primary">BackToList</button></a>
        </form>
    </div>
    <div class="col-lg-4">
        &nbsp;
    </div>
</div>
